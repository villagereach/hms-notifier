= custom_form_for [:admin, @enrollment] do |f|
  = f.base_errors
  = f.input :first_name
  = f.input :last_name
  = f.input :phone_number
  = f.input :delivery_method, :collection => ['SMS', 'IVR'], :as => :radio_buttons
  = f.input :message_stream_id, :collection => MessageStream.all.map { |s| [s.title, s.id] }
  = f.input :language, :collection => Enrollment.supported_languages, :include_blank => false
  = f.input :stream_start, :as => :date
  = f.input :preferred_time
  = f.button :submit
